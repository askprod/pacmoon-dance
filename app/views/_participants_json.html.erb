  var __current_user = "<%= current_connected? ? current_user.name.to_s : ""%>"

  var __global_pacmoon_logos = <%= raw({
    pacmoon_1: { img: asset_path('hand1.png') },
    pacmoon_2: { img:  asset_path('hand2.png') },
    pacmoon_3: { img: asset_path('hand3.png') },
    pacmoon_4: { img: asset_path('heart1.png') }
  }.to_json) %>;

  var __other_custom_participants = <%= raw({
    pelham_new_blast_city: {
      img: "https://pbs.twimg.com/media/GPQkvnmbAAAgylG?format=jpg&name=medium",
      color: "red"
    },
    pelham_mooncat: {
      img: "https://pbs.twimg.com/profile_images/1783175524296335360/RqseG2hZ_400x400.jpg",
      color: "magenta"
    },
  }.to_json) %>;

  var __other_participants = <%= raw(other_participants.to_json) %>;
