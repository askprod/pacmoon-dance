<%
  participants = User.all.map do |user|
    [user.name, { name: user.name, img: user.image_url, color: user.color }]
  end.to_h
%>

<script>
  var __current_user = "<%= current_connected? ? current_user.name.to_s : ""%>"

  var __global_pacmoon_logos = <%= raw({
    pacmoon_1: { img: asset_path('hand1.png') },
    pacmoon_2: { img:  asset_path('hand2.png') },
    pacmoon_3: { img: asset_path('hand3.png') },
    pacmoon_4: { img: asset_path('heart1.png') }
  }.to_json) %>;

  var __other_participants = <%= raw(participants.to_json) %>;
</script>